{
  "$schema": "https://beta.frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [{
      "name": "post",
      "pageBundle": false,
      "fields": [{
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true,
          "actions": [{
            "title": "Suggest titles",
            "script": "./scripts/fields/title.options.mjs",
            "command": "~/.nvm/versions/node/v20.11.1/bin/node"
          }, {
            "title": "Update title",
            "script": "./scripts/fields/title.mjs",
            "command": "~/.nvm/versions/node/v20.11.1/bin/node"
          }]
        },
        {
          "title": "Title (long)",
          "name": "longTitle",
          "type": "string"
        },
        {
          "title": "Custom field",
          "name": "customField",
          "type": "customField",
          "customType": "customField"
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "slug",
          "required": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "required": true
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "required": true
        },
        {
          "title": "Modified date",
          "name": "lastmod",
          "type": "datetime"
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image",
          "default": "{{ogImage}}",
          "required": true,
          "actions": [{
            "title": "Generate preview image",
            "script": "./scripts/fields/preview.mjs",
            "command": "~/.nvm/versions/node/v20.11.1/bin/node"
          }]
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft",
          "default": false
        },
        {
          "title": "Comments",
          "name": "comments",
          "type": "boolean",
          "default": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags",
          "default": [],
          "required": true,
          "actions": [{
            "title": "Update tags",
            "script": "./scripts/fields/tags.mjs",
            "command": "~/.nvm/versions/node/v20.11.1/bin/node"
          }]
        },
        {
          "title": "type",
          "name": "type",
          "type": "string",
          "default": "post",
          "hidden": true
        }
      ]
    },
    {
      "name": "session",
      "pageBundle": false,
      "fields": [{
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Slug",
          "name": "Slug",
          "type": "slug"
        }
      ]
    },
    {
      "name": "default",
      "pageBundle": false,
      "fields": [{
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        }
      ]
    }
  ]
}
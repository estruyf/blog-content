{
  "$schema": "https://beta.frontmatter.codes/frontmatter.schema.json",
  "frontMatter.content.snippets": {
    "Image snippet": {
      "body": "{{< caption-new \"[[&mediaUrl]]\" \"[[caption]]\" >}}",
      "isMediaSnippet": true,
      "description": ""
    },
    "Video snippet": {
      "body": [
        "{{< video \"[[&mediaUrl]]\" \"[[caption]]\" >}}"
      ],
      "isMediaSnippet": true
    },
    "Codeblock": {
      "description": "Creates a code highlighting box",
      "body": [
        "```[[type]] {[[#title]]title=\"[[&title]]\"[[/title]][[#title]][[#highlight]],[[/highlight]][[/title]][[#highlight]]hl_lines=\"[[&highlight]]\"[[/highlight]]}",
        "[[&selection]]",
        "```"
      ],
      "fields": [{
          "name": "type",
          "title": "Language",
          "type": "choice",
          "choices": [
            "html",
            "css",
            "typescript",
            "json",
            "bash"
          ],
          "default": "typescript"
        },
        {
          "name": "selection",
          "title": "Selection",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        },
        {
          "name": "title",
          "title": "Title",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "highlight",
          "title": "Highlight lines",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Blockquote": {
      "body": "{{< blockquote type=\"[[type]]\" text=\"[[&selection]]\" >}}",
      "description": "Creates a blockquote",
      "fields": [{
          "name": "type",
          "title": "Type",
          "type": "choice",
          "choices": [
            "info",
            "important"
          ],
          "default": "info"
        },
        {
          "name": "selection",
          "title": "Selection",
          "type": "string",
          "default": "FM_SELECTED_TEXT"
        }
      ]
    },
    "Speaking entry": {
      "description": "Use this to add a new entry when you're speaking at an event",
      "body": [
        "### {{date}} / {{event}}",
        "",
        "{{session}}",
        "",
        "[Link to the event]({{&link}})"
      ],
      "openingTags": "{{",
      "closingTags": "}}"
    }
  }
}